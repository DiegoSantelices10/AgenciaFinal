@model AgenciaFinal.Models.Cliente
@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">


    <link rel="stylesheet" href="@Url.Content("~/css/misEstilos.css")">
    <link rel="stylesheet" href="sweetalert2.min.css">

    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>

    <div class="wrapper fadeInDown">
        <div class="titulo text-white">
            <h1> Agencia de turismo</h1>

        </div>

        @if (TempData["registro"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                @TempData["registro"]
                <button type="button" class="close" data-dismiss="alert" arial-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }


        <div id="formContent">

            <!-- Login Form -->
            <form method="post" asp-action="Login" asp-controller="Home">
                <input asp-for="Nombre" id="login" class="fadeIn second userPass" placeholder="Usuario">
                <input asp-for="Password" id="password" class="fadeIn third userPass" placeholder="Password">

                <div class="form-group buttons">
                    <input type="submit" class="fadeIn fourth" value="Iniciar Sesion" id="btnEntrar">

                    <button class="fadeIn fourth registro" value="Registrarse" asp-action="Registro" asp-controller="Home">Registrarse</button>
                </div>
            </form>
        </div>
    </div>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="sweetalert2.min.js"></script>


</body>
</html>
