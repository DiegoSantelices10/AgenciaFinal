@model AgenciaFinal.Models.Usuario
@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

    <link rel="stylesheet" href="@Url.Content("~/css/fontawesome-all.css")">

    <link rel="stylesheet" href="@Url.Content("~/css/style.css")">
    <link rel="stylesheet" href="sweetalert2.min.css">
    <link href="@Url.Content("//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i")"
          rel="stylesheet">
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>


    <h1>Agencia De Alojamientos Turisticos</h1>
    <div class=" w3l-login-form">
        <h2>Inicio de sesion</h2>
        <form asp-action="Login" asp-controller="Home" method="POST">

            <div class="w3l-form-group">
                @if (TempData["registro"] != null)
                {


                    <div class="alert alert-warning alert-dismissible " style="font-size:13px" role="alert">
                        @TempData["registro"]
                        <button type="button" class="close" style="position:fixed" data-dismiss="alert" arial-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                else if (TempData["verificacion"] != null)
                {
                    <div class="alert alert-warning alert-dismissible " style="font-size:13px" role="alert">
                        @TempData["verificacion"]
                        <button type="button" class="close btnclose" data-dismiss="alert"  arial-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                }
            </div>
            <div class=" w3l-form-group">
                <label asp-for="nombre"></label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input asp-for="nombre" class="form-control" placeholder="Ingrese nombre de usuario"/>
                </div>
            </div>
            <div class=" w3l-form-group">
                <label asp-for="password"></label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input asp-for="password" class="form-control" placeholder="Ingrese contraseña" />
                </div>
            </div>
            <button type="submit">Login</button>
        </form>
        <p class=" w3l-register-p">Sino estas registrado ingresa<a asp-action="Registro" asp-controller="Home" class="register"> Aqui</a></p>
    </div>















    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="sweetalert2.min.js"></script>


</body>
</html>
