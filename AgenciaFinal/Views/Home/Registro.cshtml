@model AgenciaFinal.Models.Usuario



@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" href="@Url.Content("~/css/fontawesome-all.css")">

    <link rel="stylesheet" href="@Url.Content("~/css/style.css")">
    <link rel="stylesheet" href="sweetalert2.min.css">

    <meta name="viewport" content="width=device-width" />
    <title>Registro de usuario</title>
</head>
<body>


    <h1>Agencia De Alojamientos Turisticos</h1>
    <div class=" w3l-login-form">
        <h2>Registro de usuario</h2>
        <form asp-action="Registro" asp-controller="Home" method="POST">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class=" w3l-form-group">

                <div class="group">
                    <input asp-for="Nombre" class="form-control" placeholder="Usuario nuevo" />
                </div>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class=" w3l-form-group">
                <div class="group">
                    <input asp-for="Password" class="form-control" placeholder="Contraseña nueva" />
                </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class=" w3l-form-group">
                <div class="group">
                    <input asp-for="CorreoElectronico" class="form-control" placeholder="Correo Electronico" />
                </div>
                    <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
            </div>
            <div class=" w3l-form-group">
                <div class="group">
                    <input asp-for="DNI" class="form-control" placeholder="Numero De Documento" />
                </div>
                    <span asp-validation-for="DNI" class="text-danger" ></span>
            </div>
            <button type="submit">Registrarse</button>
        </form>


        </div>


            
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="sweetalert2.min.js"></script>


</body>
</html>

