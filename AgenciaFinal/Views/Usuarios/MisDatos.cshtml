@model AgenciaFinal.Models.Usuario

@{
    ViewData["Title"] = "MisDatos";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h1>Details</h1>
    @if (TempData["guardado"] != null)
    {
        <div class="alert alert-warning alert-dismissible " style="font-size:13px" role="alert">
            @TempData["guardado"]
            <button type="button" class="close" style="position:fixed" data-dismiss="alert" arial-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
}
<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.correoElectronico)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.correoElectronico)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DNI)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DNI)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="EditUsuario" asp-route-id="@Model.id">EDITAR</a> |
    <a asp-action="IndexUsuario" class="btn btn-warning">VOLVER</a>
</div>


