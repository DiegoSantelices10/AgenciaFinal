@{
    ViewData["Title"] = "BusquedaDeAlojamiento";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";


}

<div class="col-md-12" >
    <div class="card" style="margin-top:80px;">
        <div class="card-header card-header-rose">
            <h4 class="card-title">Busca tu alojamiento favorito y Reservalo con pocos Clicks!</h4>
            <p class="card-category">Complete los Datos</p>
        </div>
        <div class="card-body">
            <form asp-action="BusquedaDeAlojamiento" asp-controller="Usuarios">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                           <label class="bmd-label-static" >Ciudad</label>
                            <input class="form-control" name="ciudad">
                            <span class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="bmd-label-static">fecha Desde</label>
                            <input  type="date" name="fechaDesde" class="form-control">
                            <span class="text-danger"></span>
                        </div>
                    </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="bmd-label-static"> fecha Hasta</label>
                        <input type="date" name="fechaHasta" class="form-control">
                        <span class="text-danger"></span>
                    </div>
                </div>
                </div>
        
                <div class="row mt-3 ">
                    <div class="col-md-4">
                        <label>ELIJA TIPO DE ALOJAMIENTO</label>
                        <select class="form-control form-select-md mb-1" aria-label=".form-select-lg example">
                            <option value="hotel">hotel</option>
                            <option value="cabania">cabania</option>
                        </select>
                    </div>
                   
                    <div class="col-md-4">
                        <div class="form-group mt-3">
                            <label class="bmd-label-static">cantidad de Personas</label>
                            <input required type="number" name="cantidadPersonas" class="form-control" />
                            <span class="text-danger"></span>
                        </div>
                    </div>
                    </div>

                <div>
                    <input type="submit" value="Buscar" class="btn btn-rose pull-right" />
                </div>
                    <div class="clearfix"></div>
            </form>
        </div>
    </div>
</div>


