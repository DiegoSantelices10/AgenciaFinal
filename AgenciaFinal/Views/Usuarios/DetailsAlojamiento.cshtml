@model AgenciaFinal.Models.Alojamiento

@{ ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";

}






<div class="col-md-12">

    <div class="mb-5 ml-3">
        <a asp-action="IndexUsuario" class="btn btn-rose p-2 ">
            <i class="fas fa-arrow-left fa-3x"></i>
        </a>
    </div>

    <div class="card pb-3">
        <div class="card-header card-header-rose">
            <h4 class="card-title">Detalles del Alojamiento</h4>
            <p class="card-category">Realice su reserva</p>
        </div>
        <div class="card-body">
            <div>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.barrio)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.barrio)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.estrellas)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.estrellas)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.tv)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.tv)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ciudad)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ciudad)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.cabania.habitaciones)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.cabania.habitaciones)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.cabania.precioPorDia)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.cabania.precioPorDia)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.hotel.precio_por_persona)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.hotel.precio_por_persona)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.cabania.banios)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.cabania.banios)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.esHotel)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.esHotel)
                    </dd>
                </dl>
            </div>
            <form asp-action="Reservar" asp-controller="Reservas">
                <input type="hidden" asp-for="id" />
                <input type="submit" value="RESERVAR" class="btn btn-primary" />
            </form>
            </div>


        </div>
    </div>
</div>





