@model AgenciaFinal.Models.Usuario
@{
    ViewData["Title"] = "AdminEditUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    
    <div class="mb-5 ml-3">
        <a asp-action="Index" class="btn btn-primary p-2 ">
            <i class="fas fa-arrow-left fa-3x"></i>
        </a>
    </div>
  
        <div class="card pb-3">
        <div class="card-header card-header-primary">
            <h4 class="card-title">Administrar Datos del Usuario</h4>
            <p class="card-category">Complete su perfil</p>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="id" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="bmd-label-floating" asp-for="nombre"></label>
                            <input class="form-control" asp-for="nombre"> @Html.DisplayFor(model => model.nombre)
                            <span asp-validation-for="nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DNI" class="bmd-label-floating"></label>
                            <input asp-for="DNI" class="form-control">
                            <span asp-validation-for="DNI" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="correoElectronico" class="bmd-label-floating"></label>
                            <input asp-for="correoElectronico" class="form-control">
                            <span asp-validation-for="correoElectronico" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <input type="checkbox" aria-label="Checkbox for following text input" asp-for="bloqueado"> @Html.DisplayNameFor(model => model.bloqueado)
                        </div>
                        <div class="form-group">
                            <input type="checkbox" aria-label="Checkbox for following text input" asp-for="esAdmin"> @Html.DisplayNameFor(model => model.esAdmin)
                        </div>
                    </div>
                </div>




                    <div class="row">


                        <!-- ACA MANDE UNA AJA un <br /> RARO-->
                        <div class="col-md-6">
                        </div>
                        <div class="col-md-12">
                            <label class="bmd-label-floating"></label>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group" style="display:none" id="pass">
                                <label asp-for="password" class="bmd-label-floating">Ingrese contraseña Actual</label>
                                <input asp-for="password" name="passViejo" class="form-control" >
                                <span asp-validation-for="password" class="text-danger"></span>
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group" style="display:none" id="pass1">
                                <label class="bmd-label-floating">Constraseña Nueva</label>
                                <input name="passNueva" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group" style="display:none" id="pass2">
                                <label class="bmd-label-floating">Reingrese Contraseña Nueva</label>
                                <input name="passNueva1" class="form-control" />
                            </div>
                        </div>
                    </div>


                    <div class="mt-4">
                        <input id="cambiar" type="button" value="CAMBIAR CONTRASEÑA" class="btn btn-primary" />

                        <input type="submit" value="Actualizar Datos" class="btn btn-primary pull-right" />
                    </div>

</form>
        </div>
    </div>
</div>


   @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
