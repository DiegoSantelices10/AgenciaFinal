@model IEnumerable<AgenciaFinal.Models.Alojamiento>


@{
    ViewData["Title"] = "Alojamientos";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


@if (TempData["guardado"] != null)
{
    <div class="alert alert-warning alert-dismissible " style="font-size:13px" role="alert">
        @TempData["guardado"]
        <button type="button" class="close" style="position:fixed" data-dismiss="alert" arial-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<div class="container">
    <div class="mb-5 ml-3">
        <a asp-action="IndexUsuario" class="btn btn-rose p-2 ">
            <i class="fas fa-arrow-left fa-3x"></i>
        </a>
    </div>

    <div class="col-md-12">
        <div class="card card-plain">
            <div class="card-header card-header-rose">
                <h4 class="card-title">Alojamientos Disponibles</h4>
                <p class="card-category">Resultado de busqueda</p>
            </div>

            <div>
                <div class="row pt-2 m-auto">
                    @if (Model != null)
                    {

                        @foreach (var item in Model)
                        {

                            <div class="col-md-6 col-lg-4 pb-3">
                                <div class="card card-custom bg-light text-dark">
                                    <div class="card-custom-avatar">
                                        <img class="img-fluid" src="~/img/hoteles1.jpeg" alt="Avatar" />
                                    </div>
                                    
                                    <div style="display:flex">
                                        <div class="card-body" style="overflow-y: auto;">
                                            <h4 class="card-title text-dark" style="font-weight:600; font-size:22px">@Html.DisplayFor(modelItem => item.barrio)</h4>
                                            <p class="card-text">@Html.DisplayFor(modelItem => item.ciudad) </p>
                                            <p class="card-text">@Html.DisplayFor(modelItem => item.estrellas) Estrellas</p>

                                        </div>
                                        <div  style="margin:65px 20px 0px 0px;">
                                            <a asp-action="DetailsAlojamiento" asp-route-id="@item.id" class="btn btn-rose" >+ INFO</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }

                </div>

            </div>


        </div>
    </div>

</div>
