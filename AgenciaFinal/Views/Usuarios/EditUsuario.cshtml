@model AgenciaFinal.Models.Usuario
@{
    ViewData["Title"] = "EditUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form style="font-size:small" method="post" asp-action="EditUsuario" asp-controller="Usuarios">
    <input type="hidden" asp-for="Id"/>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="form-group col-8">
            <label asp-for="Nombre" class="control-label text-white"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group col-8">
            <label asp-for="Password" class="control-label text-white"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group col-8">
            <label asp-for="DNI" class="control-label text-white"></label>
            <input asp-for="DNI" class="form-control" />
            <span asp-validation-for="DNI" class="text-danger"></span>
        </div>
        <div class="form-group col-8">
            <label asp-for="CorreoElectronico" class="control-label text-white"></label>
            <input asp-for="CorreoElectronico" class="form-control" />
            <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
        </div>
        <div class="form-group col-8">
            <label asp-for="EsAdmin" class="control-label text-white" > </label>
            <input asp-for="EsAdmin" class="form-control" />

        </div>
        <div class="form-group col-8">
            <input type="submit" value="Editar Usuario" class="btn btn-primary"/>
        </div>
    </div>
    </form>


