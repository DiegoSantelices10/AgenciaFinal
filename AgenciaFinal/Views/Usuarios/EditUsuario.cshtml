@model AgenciaFinal.Models.Usuario

@{ ViewData["Title"] = "EditUsuario";
                Layout = "~/Views/Shared/_LayoutUser.cshtml"; }



<h1>Editar</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditUsuario">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="nombre" class="control-label"></label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="correoElectronico" class="control-label"></label>
                <input asp-for="correoElectronico" class="form-control" />
                <span asp-validation-for="correoElectronico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DNI" class="control-label"></label>
                <input asp-for="DNI" class="form-control" />
                <span asp-validation-for="DNI" class="text-danger"></span>
            </div>




            <div class="form-group" style="display:none" id="pass">
                <label asp-for="password" class="control-label"></label>
                <input name="passViejo" class="form-control" />
            </div>

            <div class="form-group" style="display:none" id="pass1">
                <label class="control-label">Constraseña Nueva</label>
                <input name="passNueva" class="form-control" />
            </div>
            <div class="form-group" style="display:none" id="pass2">
                <label class="control-label">Reingrese Contraseña Nueva</label>
                <input name="passNueva1" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="GUARDAR" class="btn btn-primary" />
                <input id="cambiar" type="button" value="CAMBIAR CONTRASEÑA" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexUsuario" class="btn btn-warning">VOLVER</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}