@model IEnumerable<AgenciaFinal.Models.Reserva>


@{
    ViewData["Title"] = "MisReservas";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<h1>MisReservas</h1>
@if (Model.Count() == 0)
{ 
    <h2 class="py-3 text-primary">No se registran Reservas</h2>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id_alojamiento.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.id_alojamiento.barrio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.id_alojamiento.ciudad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fDesde)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fHasta)
            </th>
            <th></th>
        </tr>
    </thead>
    @if (Model != null) {
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id_alojamiento.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.id_alojamiento.barrio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.id_alojamiento.ciudad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fDesde)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fHasta)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.id">Detalles</a> |
                        <a asp-action="Delete" asp-route-id="@item.id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    }
    else
    {

    }

    <table>
        <a asp-action="IndexUsuario" class="btn btn-warning">VOLVER</a>
