@model IEnumerable<AgenciaFinal.Models.Reserva>

@{
    ViewData["Title"] = "Reservas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["reservaeditado"] != null)
{
    <div class="alert alert-warning alert-dismissible " style="font-size:13px" role="alert">
        @TempData["reservaeditado"]
        <button type="button" class="close" style="position:fixed" data-dismiss="alert" arial-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
@if (TempData["reservaeliminada"] != null)
{
    <div class="alert alert-warning alert-dismissible " style="font-size:13px" role="alert">
        @TempData["reservaeliminada"]
        <button type="button" class="close" style="position:fixed" data-dismiss="alert" arial-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
@if (TempData["reservacreada"] != null)
{
    <div class="alert alert-warning alert-dismissible " style="font-size:13px" role="alert">
        @TempData["reservacreada"]
        <button type="button" class="close" style="position:fixed" data-dismiss="alert" arial-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}



<div class="content">
    <div class="container-fluid">
        <div class="row">

            <div class="col-md-12">
                <div class="card card-plain">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Reservas</h4>
                        <p class="card-category">Listado de todas las reservas realizadas</p>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th class="font-weight-bold" style="font-size:14px; text-align:center;">
                                            @Html.DisplayNameFor(model => model.id_usuario.nombre)
                                        </th>
                                        <th class="font-weight-bold" style="font-size:14px; text-align:center;">
                                            @Html.DisplayNameFor(model => model.id_alojamiento.barrio)
                                        </th>

                                        <th class="font-weight-bold" style="font-size:14px; text-align:center;">
                                            @Html.DisplayNameFor(model => model.id_alojamiento.ciudad)
                                        </th>
                                        <th class="font-weight-bold" style="font-size:14px; text-align:center;">
                                            @Html.DisplayNameFor(model => model.precio)
                                        </th>
                                        <th class="font-weight-bold" style="font-size:14px; text-align:center;">
                                            @Html.DisplayNameFor(model => model.fDesde)
                                        </th>
                                        <th class="font-weight-bold" style="font-size:14px; text-align:center;">
                                            @Html.DisplayNameFor(model => model.fHasta)
                                        </th>
                                        <th class="font-weight-bold" style="font-size: 14px; text-align: center;">ACCIONES</th>

                                        <th></th>
                                    </tr>
                                </thead>
                                @if (Model != null)
                                {
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td style="text-align:center;">
                                        @Html.DisplayFor(modelItem => item.id_usuario.nombre)
                                    </td>
                                    <td style="text-align:center;">
                                        @Html.DisplayFor(modelItem => item.id_alojamiento.barrio)
                                    </td>
                                    <td style="text-align:center;">
                                        @Html.DisplayFor(modelItem => item.id_alojamiento.ciudad)
                                    </td>
                                    <td style="text-align:center;">
                                        @Html.DisplayFor(modelItem => item.precio)
                                    </td>
                                    <td style="text-align:center;">
                                        @Html.DisplayFor(modelItem => item.fDesde)
                                    </td>
                                    <td style="text-align:center;">
                                        @Html.DisplayFor(modelItem => item.fHasta)
                                    </td>
                                    <td style="text-align:center;">

                                        <a asp-action="Edit" asp-controller="Reservas" asp-route-id="@item.id" class="material-icons">edit</a>
                                        <a asp-action="Details" asp-controller="Reservas" asp-route-id="@item.id" class="material-icons">description</a>
                                        <a asp-action="Delete" asp-controller="Reservas" asp-route-id="@item.id" class="material-icons">delete</a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



