@model AgenciaFinal.Models.Alojamiento

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-md-12">
    <div class="mb-5 ml-3">
        <a asp-action="Index" class="btn btn-primary p-2 ">
            <i class="fas fa-arrow-left fa-3x"></i>
        </a>
    </div>
    <div class="card">
        <div class="card-header card-header-primary">
            <h4 class="card-title">Nuevo Alojamiento</h4>
            <p class="card-category">Complete los Datos</p>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="id" />
                        <div class="form-group">
                            <label asp-for="barrio" class="control-label"></label>
                            <input asp-for="barrio" class="form-control" />
                            <span asp-validation-for="barrio" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ciudad" class="control-label"></label>
                            <input asp-for="ciudad" class="form-control" />
                            <span asp-validation-for="ciudad" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="estrellas" class="control-label"></label>
                            <input asp-for="estrellas" class="form-control" />
                            <span asp-validation-for="estrellas" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="tv" class="control-label"></label>
                            <input asp-for="tv" class="form-control" />
                            <span asp-validation-for="tv" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="cantidadDePersonas" class="control-label"></label>
                            <input asp-for="cantidadDePersonas" class="form-control" />
                            <span asp-validation-for="cantidadDePersonas" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="esHotel" class="control-label"></label>
                            <input asp-for="esHotel" class="form-control" />
                            <span asp-validation-for="esHotel" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Crear Alojamiento" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
