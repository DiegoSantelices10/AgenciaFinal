@model AgenciaFinal.Models.Alojamiento

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="container">

        <div class="mt-3">
            <h3 class="d-inline"> Seleccione el tipo de alojamiento</h3>
            <select id="foo" class="form-select" aria-label="Default select example">
                <option value="hotel">Hotel</option>
                <option value="cabania">Cabania</option>
            </select>
        </div>

        <hr class="bg-light" />

        <div id="cabania" style="display:none">
            <form style="font-size:small" method="post" asp-action="Create" asp-controller="Alojamientos">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="form-group col-3">
                        <label asp-for="barrio" class="control-label" ></label>
                        <input asp-for="barrio" class="form-control" />
                        <span asp-validation-for="barrio" class="text-danger"></span>
                    </div>
                    <div class="form-group col-3">
                        <label asp-for="ciudad" class="control-label "></label>
                        <input asp-for="ciudad" class="form-control" />
                        <span asp-validation-for="ciudad" class="text-danger"></span>
                    </div>
                    <div class="form-group col-3">
                        <label asp-for="estrellas" class="control-label "></label>
                        <input asp-for="estrellas" class="form-control" />
                        <span asp-validation-for="estrellas" class="text-danger"></span>
                    </div>
                    <div class="form-group col-3">
                        <label asp-for="cantidadDePersonas" class="control-label"></label>
                        <input asp-for="cantidadDePersonas" class="form-control" />
                        <span asp-validation-for="cantidadDePersonas" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-3">
                        <label asp-for="precio_por_dia" class="control-label "></label>
                        <input asp-for="precio_por_dia" class="form-control" />
                        <span asp-validation-for="precio_por_dia" class="text-danger"></span>
                    </div>
                    <div class="form-group col-3">
                        <label asp-for="cantidad_de_habitaciones" class="control-label "></label>
                        <input asp-for="cantidad_de_habitaciones" class="form-control" />
                        <span asp-validation-for="cantidad_de_habitaciones" class="text-danger"></span>
                    </div>
                    <div class="form-group col-3">
                        <label asp-for="cantidadDeBanios" class="control-label "></label>
                        <input asp-for="cantidadDeBanios" class="form-control" />
                        <span asp-validation-for="cantidadDeBanios" class="text-danger"></span>
                    </div>
                    <div class="form-group col-3">
                        <label asp-for="tv" class="control-label text-center"></label>
                        <input asp-for="tv" class="form-control" />
                        <span asp-validation-for="tv" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Agregar alojamiento" class="btn btn-primary" />
                </div>
            </form>
        </div>

        <div id="hotel">
            <form style="font-size:small" method="post" asp-action="Create" asp-controller="Alojamientos">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="form-group col-3">
                        <label asp-for="barrio" class="control-label "></label>
                        <input asp-for="barrio" class="form-control" />
                        <span asp-validation-for="barrio" class="text-danger"></span>
                    </div>
                    <div class="form-group col-3">
                        <label asp-for="ciudad" class="control-label "></label>
                        <input asp-for="ciudad" class="form-control" />
                        <span asp-validation-for="ciudad" class="text-danger"></span>
                    </div>
                    <div class="form-group col-3">
                        <label asp-for="estrellas" class="control-label "></label>
                        <input asp-for="estrellas" class="form-control" />
                        <span asp-validation-for="estrellas" class="text-danger"></span>
                    </div>

                    <div class="form-group col-3">
                        <label asp-for="cantidadDePersonas" class="control-label "></label>
                        <input asp-for="cantidadDePersonas" class="form-control" />
                        <span asp-validation-for="cantidadDePersonas" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">

                    <div class="form-group col-3">
                        <label asp-for="precio_por_persona" class="control-label "></label>
                        <input asp-for="precio_por_persona" class="form-control" />
                        <span asp-validation-for="precio_por_persona" class="text-danger"></span>
                    </div>
                    <div class="form-group col-3">
                        <label asp-for="tv" class="control-label text-center"></label>
                        <input asp-for="tv" class="form-control" />
                        <span asp-validation-for="tv" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Agregar alojamiento" class="btn btn-primary" />
                </div>
            </form>

        </div>
        <hr />


    </div>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="/js/Login.js"></script>

</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
