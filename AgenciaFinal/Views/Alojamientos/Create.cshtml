@model AgenciaFinal.Models.Alojamiento

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">

    <div class="mt-3">
        <h3 class="d-inline"> Seleccione el tipo de alojamiento</h3>
        <select id="foo" class="form-select" style="width:300px" aria-label="Default select example">
            <option style="font-size:32px" value="hotel">Hotel</option>
            <option style="font-size:32px" value="cabania">Cabania</option>
        </select>
    </div>

    <hr class="bg-light" />
    <div id="foo">
        <div id="cabania" style="display:none">
            <form style="font-size:small" method="post" asp-action="Create" asp-controller="Alojamientos">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="form-group col-3">
                        <label asp-for="barrio" class="control-label"></label>
                        <input asp-for="barrio" class="form-control" />
                        <span asp-validation-for="barrio" class="text-danger"></span>
                    </div>
                    <div class="form-group col-3">
                        <label asp-for="ciudad" class="control-label "></label>
                        <input asp-for="ciudad" class="form-control" />
                        <span asp-validation-for="ciudad" class="text-danger"></span>
                    </div>
                    <div class="form-group col-3">
                        <label asp-for="estrellas" class="control-label "></label>
                        <input asp-for="estrellas" class="form-control" />
                        <span asp-validation-for="estrellas" class="text-danger"></span>
                    </div>
                    <div class="form-group col-3">
                        <label asp-for="cabania.precioPorDia" class="control-label "></label>
                        <input asp-for="cabania.precioPorDia" class="form-control" />
                        <span asp-validation-for="cabania.precioPorDia" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-3">
                        <label asp-for="cabania.habitaciones" class="control-label "></label>
                        <input asp-for="cabania.habitaciones" class="form-control" />
                        <span asp-validation-for="cabania.habitaciones" class="text-danger"></span>
                    </div>
                    <div class="form-group col-3">
                        <label asp-for="cabania.banios" class="control-label "></label>
                        <input asp-for="cabania.banios" class="form-control" />
                        <span asp-validation-for="cabania.banios" class="text-danger"></span>
                    </div>
                    <div class="form-group col-3">
                        <label asp-for="tv" class="control-label text-center"></label>
                        <input asp-for="tv" class="form-control" />
                        <span asp-validation-for="tv" class="text-danger"></span>
                    </div>
                    <div class="form-group col-3">
                        <label asp-for="imagen"></label>
                        <input asp-for="imagen" type="file" class="control-label text-center">
                        <small id="name" class="form-text text-muted">(formato .jpg)</small>
                    </div>


                </div>


                <div class="form-group">
                    <input type="submit" value="Agregar alojamiento" class="btn btn-primary" />
                </div>
            </form>
        </div>

        <div id="hotel">
            <form style="font-size:small" method="post" asp-action="Create" asp-controller="Alojamientos">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="form-group col-3">
                        <label asp-for="barrio" class="control-label "></label>
                        <input asp-for="barrio" class="form-control" />
                        <span asp-validation-for="barrio" class="text-danger"></span>
                    </div>
                    <div class="form-group col-3">
                        <label asp-for="ciudad" class="control-label "></label>
                        <input asp-for="ciudad" class="form-control" />
                        <span asp-validation-for="ciudad" class="text-danger"></span>
                    </div>
                    <div class="form-group col-3">
                        <label asp-for="estrellas" class="control-label "></label>
                        <input asp-for="estrellas" class="form-control" />
                        <span asp-validation-for="estrellas" class="text-danger"></span>
                    </div>
                    <div class="form-group col-3">
                        <label asp-for="hotel.precio_por_persona" class="control-label "></label>
                        <input asp-for="hotel.precio_por_persona" class="form-control" />
                        <span asp-validation-for="hotel.precio_por_persona" class="text-danger"></span>
                    </div>

                </div>
                <div class="row">

                    <div class="form-group col-3">
                        <label asp-for="tv" class="control-label text-center"></label>
                        <input asp-for="tv" class="form-control" />
                        <span asp-validation-for="tv" class="text-danger"></span>
                    </div>

                    <div class="form-group col-3">
                        <label asp-for="imagen"></label>
                        <input asp-for="imagen" type="file" class="control-label text-center">
                        <small id="name" class="form-text text-muted">(formato .jpg)</small>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Agregar alojamiento" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <hr />


</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
