@model AgenciaFinal.Models.Alojamiento

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ml-4">
    <a asp-action="Index" class="btn btn-primary p-2">
        <i class="fas fa-arrow-left fa-3x"></i>
    </a>
</div>

<div class="col-md-6 shadow p-3 mb-5 bg-white rounded " style="left:270px">
    <div class="card pb-2">
        <div class="card-header card-header-primary">
            <h4 class="card-title">Administrar Datos del Alojamiento</h4>
            <p class="card-category">Alojamiento</p>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.barrio)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.barrio)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.estrellas)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.estrellas)
                </dd>

                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.tv)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.tv)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.ciudad)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.ciudad)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.cabania.habitaciones)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.cabania.habitaciones)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.cabania.precioPorDia)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.cabania.precioPorDia)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.hotel.precio_por_persona)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.hotel.precio_por_persona)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.cabania.banios)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.cabania.banios)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.esHotel)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.esHotel)
                </dd>
            </dl>
        </div>



        <div class="ml-3 mt-0">

            <a asp-action="AdminEditUsuario" asp-route-id="@Model.id" class="btn btn-primary">EDITAR</a>
            
        </div>

    </div>
    </div>



