@model AgenciaFinal.Models.Alojamiento; 
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h3>Crear nuevo libro</h3>
            </div>
        </div>

      
            <div class="col-sm-10">
                <form method="post" asp-action="Create" asp-controller="Alojamientos">
                    
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label asp-for="barrio" class="control-label text-white"></label>
                            <input asp-for="barrio" class="form-control" />
                            <span asp-validation-for="barrio" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="ciudad" class="control-label text-white"></label>
                            <input asp-for="ciudad" class="form-control" />
                            <span asp-validation-for="ciudad" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label asp-for="estrellas" class="control-label text-white"></label>
                            <input asp-for="estrellas" class="form-control" />
                            <span asp-validation-for="estrellas" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="precio_por_dia" class="control-label text-white"></label>
                            <input asp-for="precio_por_dia" class="form-control" />
                            <span asp-validation-for="precio_por_dia" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label asp-for="precio_por_persona" class="control-label text-white"></label>
                            <input asp-for="precio_por_persona" class="form-control" />
                            <span asp-validation-for="precio_por_persona" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="cantidadDeBanios" class="control-label text-white"></label>
                            <input asp-for="cantidadDeBanios" class="form-control" />
                            <span asp-validation-for="cantidadDeBanios" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label asp-for="cantidad_de_habitaciones" class="control-label text-white"></label>
                            <input asp-for="cantidad_de_habitaciones" class="form-control" />
                            <span asp-validation-for="cantidad_de_habitaciones" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Agregar alojamiento" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        
    </div>

</body>
</html>
