@model IEnumerable<AgenciaFinal.Models.Alojamiento>
@{
    ViewData["Title"] = "CargarAlojamiento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CargarAlojamiento</h1>

@if (Model.Count() > 0)
{
    <table class="tabla table table-bordered table-striped text-white">
        <thead>
            <tr class="fila">
                <td>@Html.DisplayNameFor(m => m.Id)</td>
                <td>@Html.DisplayNameFor(m => m.barrio)</td>
                <td>@Html.DisplayNameFor(m => m.ciudad)</td>
                <td>@Html.DisplayNameFor(m => m.estrellas)</td>
                <td>@Html.DisplayNameFor(m => m.cantidadDeBanios)</td>
                <td>@Html.DisplayNameFor(m => m.cantidadDePersonas)</td>
                <td>@Html.DisplayNameFor(m => m.cantidad_de_habitaciones)</td>
                <td>@Html.DisplayNameFor(m => m.esHotel)</td>
                <td>@Html.DisplayNameFor(m => m.tv)</td>
                <td>@Html.DisplayNameFor(m => m.precio_por_persona)</td>
                <td>Acciones</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.barrio</td>
                <td>@item.ciudad</td>
                <td>@item.estrellas</td>
                <td>@item.cantidadDeBanios</td>
                <td>@item.cantidadDePersonas</td>
                <td>@item.cantidad_de_habitaciones</td>
                <td>@item.esHotel</td>
                <td>@item.tv</td>
                <td>@item.precio_por_persona</td>
                <td>
                    <a asp-controller="Alojamiento" asp-action="DeleteUsuario" asp-route-id="@item.Id" class="btn btn-danger p-1">Eliminar</a>
                    <a asp-controller="Alojamiento" asp-action="EditUsuario" asp-route-id="@item.Id" class="btn btn-primary p-1">Editar</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
} else
            {
                
<p class="text-white"> no hay registros</p>
            }

