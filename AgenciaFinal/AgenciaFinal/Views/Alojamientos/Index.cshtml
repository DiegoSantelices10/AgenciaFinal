@model IEnumerable<AgenciaFinal.Models.Alojamiento>


@{
    ViewData["Title"] = "Alojamientos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Panel Alojamientos</h1>

@if (TempData["alojeditado"] != null)
{
    <div class="alert alert-warning alert-dismissible " style="font-size:13px" role="alert">
        @TempData["alojeditado"]
        <button type="button" class="close" style="position:fixed" data-dismiss="alert" arial-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
@if (TempData["alojeliminado"] != null)
{
    <div class="alert alert-warning alert-dismissible " style="font-size:13px" role="alert">
        @TempData["alojeliminado"]
        <button type="button" class="close" style="position:fixed" data-dismiss="alert" arial-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
@if (TempData["alojcreado"] != null)
{
    <div class="alert alert-warning alert-dismissible " style="font-size:13px" role="alert">
        @TempData["alojcreado"]
        <button type="button" class="close" style="position:fixed" data-dismiss="alert" arial-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<p>
    <a asp-action="Create">Crear un Alojamiento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.barrio)</th>
            <th>@Html.DisplayNameFor(model => model.ciudad)</th>
            <th>@Html.DisplayNameFor(model => model.estrellas)</th>
            <th>@Html.DisplayNameFor(model => model.tv)</th>
            <th>@Html.DisplayNameFor(model => model.hotel.precio_por_persona)</th>
            <th>@Html.DisplayNameFor(model => model.cabania.habitaciones)</th>
            <th>@Html.DisplayNameFor(model => model.cabania.precioPorDia)</th>
            <th>@Html.DisplayNameFor(model => model.cabania.banios)</th>
            <th>@Html.DisplayNameFor(model => model.esHotel)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.barrio)</td>
                <td>@Html.DisplayFor(modelItem => item.ciudad)</td>
                <td>@Html.DisplayFor(modelItem => item.estrellas)</td>
                <td>@Html.DisplayFor(modelItem => item.tv)</td>
                <td>@Html.DisplayFor(modelItem => item.hotel.precio_por_persona)</td>
                <td>@Html.DisplayFor(modelItem => item.cabania.habitaciones)</td>
                <td>@Html.DisplayFor(modelItem => item.cabania.precioPorDia)</td>
                <td>@Html.DisplayFor(modelItem => item.cabania.banios)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.esHotel)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.id">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
